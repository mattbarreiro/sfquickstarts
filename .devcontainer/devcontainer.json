// See https://containers.dev/implementors/json_reference/ for configuration reference
{
    "name": "Snowflake Quickstarts Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"options": [
			"--platform=linux/amd64"
		]
	},
	"remoteUser": "node",
	"features": {},
	"postCreateCommand": "cd site && npm install",
	"postStartCommand": "cd site && npm run serve",
    "portsAttributes": {
        "8000": {
            "label": "Quickstarts Local Server",
            "onAutoForward": "notify"
        }
    },
    "forwardPorts": [8000],
    "customizations": {
	}

}